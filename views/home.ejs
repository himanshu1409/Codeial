<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/home.css" type="text/css" />
    <script
      src="https://kit.fontawesome.com/67b4a7f8da.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="main">
      <form action="/information" id="add" method="post">
        <div class="title">TODO App</div>
        <div class="description">
          <p class="description-heading">Description</p>

          <input
            type="text"
            placeholder="What do you need to do?"
            name="description"
            id="text"
            required
          />
        </div>
        <div class="category-date">
          <div class="category">
            <p class="description-heading">Category</p>
            <label for="categories">
              <select name="cat" id="category">
                <option value="Choose" disabled selected>
                  Choose your category
                </option>
                <option value="Personal">Personal</option>
                <option value="Work">Work</option>
                <option value="School">School</option>
                <option value="Cleaning">Cleaning</option>
                <option value="Other">Other</option>
              </select>
            </label>
          </div>
          <div class="date">
            <p class="description-heading">Due Date</p>
            <input type="date" name="date" />
          </div>
        </div>
        <div class="buttons">
          <button type="submit" id="add-task">
            <i class="fa-solid fa-plus"></i>&nbsp Add Task
          </button>
          <!-- <button type="" id="delete-task">
              <i class="fa-solid fa-trash-can"></i>&nbsp Delete Task
            </button> -->
        </div>
      </form>
      <ul>
        <% for(i of todo_list) { %>
        <li>
          <div class="task">
            <div class="delete">
              <a href="/delete-contact/?id=<%= i._id %>">
                <i class="fa-solid fa-trash-can"></i>
              </a>
            </div>
            <div class="task-desc-date">
              <div class="task-desc"><%= i.description %></div>
              <div class="task-date">
                <i class="fa-regular fa-calendar-days"></i> &nbsp; <%=
                JSON.stringify(i.date).slice(1,11) %>
              </div>
            </div>
            <div class="task-cat <%= i.category%>"><%= i.category%></div>
          </div>
        </li>
        <% } %>
      </ul>
    </div>
  </body>
</html>
